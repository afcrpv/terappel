- title "Terappel", "Gestion des appels grossesse"

.well.well-lg
  = link_to new_dossier_path, class: "btn btn-success btn-lg" do
    %span.glyphicon.glyphicon-plus
    Saisir un dossier
  = link_to new_search_path, class: "btn btn-primary btn-lg" do
    %span.glyphicon.glyphicon-search
    Rechercher un dossier
  - if current_user.admin?
    .btn-group
      %button{type: "button", class: "btn btn-info btn-lg"}
        %span.glyphicon.glyphicon-wrench
        Administration
      %button{type: "button", class: "btn btn-info btn-lg dropdown-toggle", data: {toggle: "dropdown"}}
        %span.caret
      = render 'layouts/admin_nav'
  = link_to "#", class: "btn btn-warning btn-lg" do
    %span.glyphicon.glyphicon-book
    Exploitation
