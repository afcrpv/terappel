= simple_form_for dossier, html: { class: "form-horizontal saisie"} do |f|
  = f.error_notification if f.error_notification

  %ul.nav.nav-pills#tabs
    %li= link_to "Informations générales", "#infos", data: {toggle: "pill"}
    %li= link_to "Grossesse", "#grossesse", data: {toggle: "pill"}
    %li= link_to "Exposition", "#expositions", data: {toggle: "pill"}
    %li= link_to "Evolution", "#evol", data: {toggle: "pill"}
    %li= link_to "Nouveau-né", "#bebes", data: {toggle: "pill"}

  .tab-content
    #infos.tab-pane.fade.in.active= render "infos", f: f
    #grossesse.tab-pane.fade.in= render "grossesse", f: f
    #expositions.tab-pane.fade.in= render "expositions", f: f
    #evol.tab-pane.fade.in= render "evolution", f: f
    #bebes.tab-pane.fade.in= render "bebes", f: f

  %hr

  = f.input :commentaire, label: "Commentaire du dossier", input_html: {class: "span9", rows: 2}

  .form-actions
    = button_tag type: :submit, disable_with: (save_and_continue = "Enregistrer et continuer"), name: "_continue", class: "btn btn-success" do
      %i.icon-white.icon-arrow-right
      = save_and_continue
    = button_tag type: :submit, disable_with: (save_and_add = "Enregistrer et créer un nouveau dossier"), name: "_add_another", class: "btn btn-primary" do
      %i.icon-white.icon-plus
      = save_and_add
    = button_tag type: :submit, disable_with: (save_and_close = "Enregistrer et fermer"), class: "btn btn-info" do
      %i.icon-white.icon-ok
      = save_and_close
