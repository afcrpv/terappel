%table.table.table-condensed#dates_grossesse
  %tr
    %th.span5 Age grossesse lors de l'appel (SA)
    %td.span7= f.text_field :age_grossesse, class: "span1"
  %tr
    %th DDR
    %td= f.text_field :date_dernieres_regles, class: "span2 dateITA dateNotFuture", "data-value" => date_dernieres_regles
  %tr
    %th Date de debut de grossesse
    %td= f.text_field :date_debut_grossesse, class: "span2 dateITA dateNotFuture", "data-value" => date_debut_grossesse
  %tr
    %th Date prévue d'accouchement
    %td= f.text_field :date_accouchement_prevu, class: "span2 dateITA", "data-value" => date_accouchement_prevu
  %tr
    %td#calc_column
      = link_to "Calculer", "#", id: "calc_dates_grossesse", class: "btn btn-primary"
      = link_to "Effacer", "#", id:"reset_dates_grossesse", class: "btn btn-danger"
    %td#grossesse_date_messages

.larger-labels
  .inline-inputs
    = f.input :tabac, as: :select, collection: Dossier::TABAC, input_html: {class: "span3"}
    %span.message{style: "display: none;"} N'oubliez pas de saisir "TABAC" dans l'onglet Exposition

  .inline-inputs
    = f.input :alcool, as: :select, collection: Dossier::ALCOOL, input_html: {class: "span3"}
    %span.message{style: "display: none;"} N'oubliez pas de saisir "ALCOOL" dans l'onglet Exposition

  .inline-inputs
    = f.input :toxiques, as: :select, collection: Dossier::ONI, input_html: {class: "span1"}
    %span.message{style: "display: none;"} N'oubliez pas de saisir "toxiques" dans l'onglet Exposition

  .inline-inputs
    = f.input :folique, label: "Acide folique avant la grossesse", as: :select, collection: Dossier::ONI, input_html: {class: "span1"}
    %span.message{style: "display: none;"} Préciser éventuellement le dosage dans le commentaire

  .inline-inputs
    = f.input :patho1t, label: "Pathologie(s) au premier trimestre", as: :select, collection: Dossier::ONI, input_html: {class: "span1"}
    %span.message{style: "display: none;"} Préciser la ou les pathologies dans le commentaire

  = f.input :ass_med_proc, label: "Assistance médicale à la procréation", collection: Dossier::ONI, input_html: {class: "span1"}
