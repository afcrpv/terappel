.nested-fields
  = f.input :sexe, as: :radio_buttons, collection: Bebe::SEXE, item_wrapper_class: "inline"
  .inline-inputs
    = f.input :poids, wrapper: :append do
      = f.input_field :poids, class: "span1"
      %span.add-on g
    = f.input :taille, wrapper: :append do
      = f.input_field :taille, class: "span1"
      %span.add-on cm
    = f.input :pc, wrapper: :append, label: "Périmètre crânien" do
      = f.input_field :pc, class: "span1"
      %span.add-on cm
  .inline-inputs
    = f.input :apgar1, label: "Apgar", wrapper: :append do
      = f.input_field :apgar1, class: "span1"
      %span.add-on 1'
    = f.input :apgar5, label: "Apgar", wrapper: :append do
      = f.input_field :apgar5, class: "span1"
      %span.add-on 5'
  = f.input :malformation, label: "Malformation", as: :select, collection: ["Oui", "Non", "NSP"],
    input_html: {class: "span1"}
  .control-group.inline-inputs.malformation_tokens
    = f.label :malformation_tokens, "Malformations"
    .controls
      = f.text_area :malformation_tokens, "data-pre" => f.object.malformations.map(&:libelle_and_id).to_json, class: "malformation_tokens"
  = f.input :pathologie, label: "Pathologie", as: :select, collection: ["Oui", "Non", "NSP"], input_html: {class: "span1"}
  .control-group.inline-inputs.pathologie_tokens
    = f.label :pathologie_tokens, "Pathologies"
    .controls
      = f.text_area :pathologie_tokens, "data-pre" => f.object.pathologies.map(&:libelle_and_id).to_json, class: "pathologie_tokens"
  = f.input :age, wrapper: :append, label: "Age de l'enfant" do
    = f.input_field :age, class: "span1"
    %span.add-on SA
    %span.help-inline (lors du dernier examen)
  .field_links
    = link_to "#", class: "btn btn-success btn-small validate_bebe" do
      %i.icon-ok.icon-white
      Valider
    = link_to_remove_association f, class: "btn btn-danger btn-small" do
      %i.icon-trash.icon-white
      Supprimer
    = link_to "#malformation", class: "btn show_malformation_tree", "data-toggle" => "modal" do
      %i.icon-list
      Arbre Malformations
    = link_to "#pathologie", class: "btn show_pathologie_tree", "data-toggle" => "modal" do
      %i.icon-list
      Arbre Pathologies
