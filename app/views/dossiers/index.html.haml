- title "Liste des dossiers"

= search_form_for @search, :html => {:class => "search"} do |f|
  %fieldset
    %legend Filtres
    = f.label :name_cont
    .input= f.text_field :name_cont, class: "span2"
    = f.submit class: "btn primary"

- if @dossiers.any?
  %table.pretty
    %thead
      %th= sort_link @search, :date_appel, {}
      %th= sort_link @search, :name, {}
      %th NÂ° Appel
      %th Actions
    %tbody
      - @dossiers.each do |dossier|
        %tr
          %td= l dossier.date_appel
          %td= dossier.name
          %td= link_to dossier.code, dossier if can? :read, dossier
          %td= render 'shared/action_links', :object => dossier, :verbs => %w(show edit destroy)
