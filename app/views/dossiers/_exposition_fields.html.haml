.nested-fields
  = f.association :expo_type, label: "Type", input_html: {class: "span7"}
  = f.input :produit_name, url: autocomplete_produit_name_dossiers_path, as: :autocomplete, label: "Exposition", input_html: {class: "span7"}
  = f.input :indication_name, url: autocomplete_indication_name_dossiers_path, as: :autocomplete, label: "Indication", input_html: {class: "span7"}
  .control-group.inline-inputs
    = f.label "Période Expo (en SA)"
    .controls
      = f.text_field :de, class: "span1", placeholder: "De"
      = f.text_field :a, class: "span1 duree", placeholder: "à"
      = f.label "Durée"
      = f.text_field :duree, class: "span1"
  .control-group.inline-inputs
    = f.label "Reprise ttt "
    .controls
      = f.text_field :de2, class: "span1", placeholder: "De"
      = f.text_field :a2, class: "span1 duree", placeholder: "à"
      = f.label "Durée"
      = f.text_field :duree2, class: "span1"
  = f.association :expo_nature, label: "Nature"
  = f.input :dose, label: "Posologie", hint: "p.e. en mg/jr"
  = f.association :expo_terme, label: "Terme d'exposition"
  = f.input :medpres, as: :radio_buttons, collection: Exposition::ONNSP, label: "Prescription", hint: "à remplir en cas de demande d'aide à la prescription", item_wrapper_class: "inline"
  .field_links
    = link_to "#", class: "btn btn-small btn-success validate_expo" do
      %i.icon-ok.icon-white
      Valider
    = link_to_remove_association f, class: "btn btn-danger btn-small" do
      %i.icon-trash.icon-white
      Supprimer
