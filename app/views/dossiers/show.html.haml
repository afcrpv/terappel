-#
  #infos
    %h2 Informations Générales
    %table.table.table-condensed.table-striped
      %tr
        %td
          %span.libelle Date Appel
          = dossier.date_appel
        %td
          %span.libelle Motif
          = dossier.motif_name
        %td
          %span.libelle Témoin
          = dossier.expo_terato
      %tr
        %td{colspan: "3"}
          %span.libelle Correspondant
          = dossier.demandeur
      %tr
        %td
          %span.libelle Patiente
          = dossier.patiente
        %td
          %span.libelle Age
          = dossier.age
        %td
          %span.libelle Poids/Taille
          = dossier.poids_et_taille
      %tr
        %td{colspan: "3"}
          %span.libelle Catégorie socio-professionnelle
          = dossier.categoriesp
      %tr
        %td{colspan: "3"}
          %span.libelle Antécédents Personnels
          = dossier.atcds_perso
      %tr
        %td{colspan: "3"}
          %span.libelle Antécédents Familiaux
          = dossier.atcds_fam
      %tr
        %td{colspan: "3"}
          %span.libelle Grossesse antérieures
          = dossier.atcds_grs

  #grossesse
    %h2 Grossesse
    %table.table.table-condensed.table-striped
      %tr
        %td
          %span.libelle Age grossesse lors de l'appel
          = dossier.age_grossesse
        %td
          %span.libelle Début grossesse
          = dossier.date_debut_grossesse
        %td
          %span.libelle Accouchement prévu
          = dossier.date_accouchement_prevu
      %tr
        %td
          %span.libelle Tabac
          = dossier.tabac
        %td
          %span.libelle Alcool
          = dossier.alcool
        %td
          %span.libelle Autres toxiques
          = dossier.toxiques
      %tr
        %td
          %span.libelle Acide folique avant grossesse
          = dossier.folique

        %td
          %span.libelle Pathologie(s) au 1er trimestre
          = dossier.patho1t

  #expositions
    %h2 Expositions
    %table.table.table-condensed.table-striped
      %tr
        %th Produit
        %th Indication
        %th Terme
        %th Posologie
        %th Voie
      = dossier.expositions_table(%w(produit indication expo_terme dose voie))

  #evol
    %h2 Evolution
    %table.table.table-condensed.table-striped
      %tr
        %td
          %span.libelle Date recueil évolution
          = dossier.date_recueil_evol
        %td
          %span.libelle Pathologie maternelle
          = dossier.path_mat
        %td
          %span.libelle Evolution
          = dossier.evolution
      %tr
        %td
          %span.libelle Modalité accouchement
          = dossier.modaccouch
        %td
          %span.libelle Terme
          = dossier.terme
        %td
          %span.libelle Date réelle d'accouchement
          = dossier.date_reelle_accouchement

  #bebes
    %h2 Nouveau-né
    %table.table.table-condensed.table-striped
      %tr
        %th Age au dernier examen
        %th Sexe
        %th Poids
        %th Taille
        %th PC
        %th Apgar
        %th Malformation
        %th Pathologie
      = dossier.bebes_table(%w(age sexe poids taille pc apgar malformation pathologie))

  #commentaire
    %h2 Commentaire
    = dossier.commentaire
    - if dossier.bebes.any?
      - dossier.bebes.each_with_index do |bebe, index|
        .row
          .span1
            %span.libelle
              Bébé&nbsp;
              = index + 1 if dossier.bebes.many?
          .span3
            %strong P
            = bebe.poids
            g
            %strong T
            = bebe.taille
            cm
            %strong Apgar
            = bebe.apgar1 rescue 'NC'
            = '-'
            = bebe.apgar5 rescue 'NC'
          .span3
            %strong MALFORMATION
            = bebe.malformation
            %strong PATHOLOGIE
            = bebe.pathologie

- present @dossier do |dossier|
  .dossier_fiche
    .row-fluid
      .span4
        %span.libelle Date Appel
        = dossier.date_appel
      .span6
        %span.libelle Motif
        = dossier.motif_name
      .span2
        %span.libelle Témoin
        = dossier.expo_terato
    .row-fluid
      .span6
        %span.libelle Correspondant initial
        = dossier.demandeur
      .span6
        %span.libelle Correspondant à relancer
        = dossier.relance
    .row-fluid
      .span4
        %span.libelle Patiente
        = dossier.patiente
      .span4
        %span.libelle Age
        = dossier.age
    .row-fluid
      .span4
        %span.libelle Age grossesse lors appel
        = dossier.age_grossesse
      .span4
        %span.libelle Début grossesse
        = dossier.date_debut_grossesse
      .span3
        %span.libelle Accouchement prévu
        = dossier.date_accouchement_prevu
    .row-fluid
      .span12
        %span.libelle Exposition
        = @dossier.produits_names
    .row-fluid
      .span4
        %span.libelle Tabac
        = dossier.tabac
      .span4
        %span.libelle Alcool
        = dossier.alcool
      .span3
        %span.libelle Autres toxiques
        = dossier.toxiques
    .row-fluid
      .span4
        %span.libelle Evolution
        = dossier.evolution
      .span4
        %span.libelle Terme
        = dossier.terme
