<fieldset class="fields" data-object-name="<%= f.object_name %>">
  <legend>Satisfait <%= f.combinator_select %> critère <%= button_to_remove_fields "enlever", f %></legend>
  <%= f.condition_fields do |c| %>
    <%= render 'condition_fields', f: c %>
  <% end %>
  <%= button_to_add_fields "Ajouter Critère", f, :condition %>

  <%= f.grouping_fields do |g| %>
    <%= render 'grouping_fields', f: g %>
  <% end %>
  <%= button_to_nest_fields "Ajouter Groupe de Critères", :grouping %>
</fieldset>
