%h1=t('sessions.password_resets.change_password') + @user.username

= form_for @user, :url => password_reset_path(@user), :html => {:method => :put} do |f|
  -#TODO: add error div here or use simple form
  .field
    = f.label :email , t('sessions.password_resets.email')
    = @user.email
  .field
    = f.label :password, t('sessions.new.password')
    = f.password_field :password
  .field
    = f.label :password_confirmation, t('sessions.password_resets.password_confirmation')
    = f.password_field :password_confirmation
    = hidden_field_tag :token, @token
  .actions
    = f.submit t('sessions.password_resets.submit')
