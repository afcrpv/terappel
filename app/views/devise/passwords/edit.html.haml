- title t('devise.passwords.change_your_password')

.row
  .col-md-6.col-md-offset-3
    = simple_form_for resource, as: resource_name, url: password_path(resource_name), html: { method: :put } do |f|

      = devise_error_messages!
      = f.hidden_field :reset_password_token

      = f.input :password, label: t('devise.passwords.new_password')
      = f.input :password_confirmation, label: t('devise.passwords.confirm_new_password')
      = f.button :submit, t('devise.passwords.change_my_password')

= render 'devise/shared/links'
