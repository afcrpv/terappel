- title "Connexion"

= form_for resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"} do |f|
  .form-group
    = f.label :username, "Utilisateur", class: "col-sm-2 control-label"
    .col-sm-6
      = f.text_field :username, class: "form-control"

  .form-group
    = f.label :password, "Mot de passe", class: "col-sm-2 control-label"
    .col-sm-6
      = f.password_field :password, class: "form-control"

  .form-group
    .col-sm-offset-2.col-sm-6
      = f.submit "Se connecter", data: {disable_with: "Attendre..."}, class: "btn btn-success"
