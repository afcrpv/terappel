- title "Modification profile"

= form_for resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal", role: "form" } do |f|
  = render "error_message", model: resource
  .form-group
    = f.label :username, "Nom d'utilisateur", class: "col-sm-2 control-label"
    .col-sm-3
      = f.text_field :username, class: "form-control", autofocus: true

  .form-group
    = f.label :email, class: "col-sm-2 control-label"
    .col-sm-3
      = f.email_field :email, class: "form-control"

  .form-group
    = f.label :password, "Mot de passe", class: "col-sm-2 control-label"
    .col-sm-3
      = f.password_field :password, autocomplete: "off", class: "form-control"
    .col-sm-6
      %span.help-block laissez vide si vous ne voulez pas changer

  .form-group
    = f.label :password_confirmation, "Confirmer", class: "col-sm-2 control-label"
    .col-sm-3
      = f.password_field :password_confirmation, class: "form-control"

  .form-group
    = f.label :current_password, "Mot de passe actuel", class: "col-sm-2 control-label"
    .col-sm-3
      = f.password_field :current_password, class: "form-control"
    .col-sm-6
      %span.help-block saisir votre mot de passe actuel pour confirmer les modifications

  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit "Enregistrer", class: "btn btn-success"
