.row.col-md-9.col-md-offset-3
  %p
    %br
    = t '.sign_in_html', url: new_session_path(resource_name) if controller_name != 'sessions'
    = t '.sign_up_html', url: new_registration_path(resource_name) if devise_mapping.registerable? && controller_name != 'registrations'
    = t '.forgot_password_html', url: new_password_path(resource_name) if devise_mapping.recoverable? && controller_name != 'passwords'
    = t '.didnt_receive_confirmation_instructions?_html', url: new_confirmation_path(resource_name) if devise_mapping.confirmable? && controller_name != 'confirmations'
    = t '.didnt_receive_unlock_instructions?_html', url: new_unlock_path(resource_name) if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
