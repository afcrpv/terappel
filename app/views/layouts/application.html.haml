!!! 5
%html
%head
  %title= yield(:title) || "Untitled"
  = stylesheet_link_tag    "application"
  = stylesheet_link_tag "rails_admin/rails_admin.css"
  = javascript_include_tag "rails_admin/rails_admin.js"
  <!--[if IE 6]><%= stylesheet_link_tag 'ie6' %><![endif]-->
  <!--[if IE 7]><%= stylesheet_link_tag 'ie7' %><![endif]-->
  = javascript_include_tag "application"
  %meta{"http-equiv"=>"Content-Type", :content =>"text/html; charset=utf-8"}/
  = csrf_meta_tags

  = yield(:head)

%body{:class => params[:controller]}
  #page_container
    .topbar-wrapper{:style => "z-index: 5;"}
      .topbar{:'data-dropdown' => 'dropdown'}
        .topbar-inner
          .container-fluid
            %h3= link_to "Terappel", root_path
            %ul.nav.secondary-nav= render 'layouts/user_nav'

    %section#page
      - flash.each do |name, msg|
        = content_tag :section, msg, :id => "flash_#{name}"

      %h1#page_title= yield(:title) if show_title?

      = yield

    %footer#page_footer
      - if Rails.env.development?
        %details
          = debug params
          = yield(:footer)
