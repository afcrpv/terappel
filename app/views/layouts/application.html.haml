!!! 5
%head

  / Basic Page Needs
  %meta{:charset => "utf-8"}/
  %title= yield(:title) || "Untitled"

  / IE
  %meta{"http-equiv" => "X-UA-Compatible", content: "IE=edge"}

  %meta{name: "viewport", content: "width=device-width, initial-scale=1.0"}/

  / CSS
  = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true

  = javascript_include_tag "application", "data-turbolinks-track" => true
  = csrf_meta_tags

  / Favicons
  = favicon_link_tag

  = yield(:head)

%body{class: params[:controller]}

  %nav.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
    .navbar-header
      %button.navbar-toggle{type: "button", data: {toggle: "collapse", target: ".navbar-ex1-collapse"}}
      %span.sr-only Menu
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
      = link_to "Terappel", root_path, class: "navbar-brand"

    - if current_user
      %ul.nav.navbar-nav
        %li.dropdown
          = link_to "#", class: "dropdown-toggle", "data-toggle" => "dropdown" do
            Recherche
            %b.caret
          %ul.dropdown-menu
            %li= link_to "Recherche Simple", dossiers_path
            %li= link_to "Recherche AvancÃ©e", new_search_path
      = render 'layouts/search'
      = render 'layouts/user_nav'

  #page_wrap
    .container
      .row#page_header
        %header
          .col-md-8
            %h1#page_title
              = yield(:title) if show_title?
              = yield(:page_title)
          .col-md-4
            - flash && flash.each do |name, msg|
              .flash.alert.fade.in{:class => "alert-#{name}"}
                %a.close{"data-dismiss" => "alert", href: "#"} &times;
                %strong= msg

      = yield

  #footer_wrap
    .container
      .row#page_footer
        %footer
          .col-md-4.col-md-offset-8
            Copyright Terappel 2012
